import numpy
arr = []
n,m=map(int,input().split())
for row in range(n):
    my_arr=list(map(int,input().split()))
    arr.append(my_arr)

arrayy = numpy.array(arr)
min_ls = numpy.min(arrayy, axis=1)
print(numpy.max(min_ls))


